#include <stdio.h>

int main() {
    float num1, num2, num3, average;

    // Input three numbers
    printf("Enter first numbers: ");
    scanf("%d",&num1);
    printf("Enter second numbers: ");
    scanf("%d",&num2);
    printf("Enter third numbers: ");
    scanf("%d",&num3);

    average = (num1 + num2 + num3) / 3;
    printf("avg of%d ,%d and %d is %d");

    return 0;
}